                            <Viewbox Grid.ColumnSpan="2" Grid.Column="2" HorizontalAlignment="Right" Height="55" Margin="0,0,0.333,0" Grid.Row="4"  Width="142">
                                <TextBox x:Name="textBox4" Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
                            </Viewbox>
                            <Viewbox HorizontalAlignment="Left" Height="27" Margin="0.333,0,0,0" Grid.Row="5" VerticalAlignment="Top" Width="142" Grid.Column="1" Grid.ColumnSpan="2">
                                <TextBlock x:Name="textBlock3" TextWrapping="Wrap" Text="Start Time" TextAlignment="Center" Width="87" Foreground="White"/>
                            </Viewbox>
                            <Viewbox Grid.ColumnSpan="2" Grid.Column="2" HorizontalAlignment="Left" Height="27" Margin="30.333,0.333,0,0" Grid.Row="5" VerticalAlignment="Top" Width="142">
