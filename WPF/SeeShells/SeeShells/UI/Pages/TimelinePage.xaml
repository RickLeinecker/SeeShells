                            <Viewbox Grid.Column="3" HorizontalAlignment="Left" Height="35" Margin="77.667,10,0,0" Grid.Row="10" VerticalAlignment="Top" Width="64">
                                <Button x:Name="button7" Content="Button" Width="75" Height="43"/>
                            </Viewbox>
                            <Viewbox Grid.Column="1" Height="34" Margin="10.333,10.333,93.667,0" Grid.Row="11" VerticalAlignment="Top">
                                <Button x:Name="button9" Content="+" Width="32" Height="31"/>
                            </Viewbox>
                        </Grid>
                        <Grid Margin="361,10,-0.333,0.333">
