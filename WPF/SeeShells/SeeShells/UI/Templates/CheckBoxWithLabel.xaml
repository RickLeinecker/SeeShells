<UserControl x:Class="SeeShells.UI.Templates.CheckBoxWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeeShells.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Left" Margin="10,0">
            <CheckBox x:Name="box" Foreground="White" Margin="5" Checked="box_Checked"  Unchecked="box_Unchecked"/>
        </Viewbox>
    </Grid>
</UserControl>
